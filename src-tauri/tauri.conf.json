{
  "productName": "FileFlow",
  "version": "0.1.5",
  "identifier": "com.fileflow.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
          {
            "label": "main",
            "title": "FileFlow",
            "width": 600,
            "height": 400,
            "resizable": true,
            "fullscreen": false,
            "visible": true,
            "skipTaskbar": false,
            "transparent": true,
            "decorations": true
          },
      {
        "label": "file-organization",
        "title": "File Organization",
        "width": 500,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "decorations": true,
        "url": "index.html"
      },
      {
        "label": "about",
        "title": "About FileFlow",
        "width": 350,
        "height": 250,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "decorations": true,
        "url": "index.html"
      },
      {
        "label": "update",
        "title": "Updates",
        "width": 400,
        "height": 380,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "skipTaskbar": true,
        "center": true,
        "decorations": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
            "permissions": [
            "core:default",
            "dialog:allow-open",
            "dialog:default",
            "fs:allow-read",
            "fs:allow-write",
            "fs:read-files",
            "fs:read-meta",
            {
              "identifier": "fs:scope",
              "allow": ["**"]
            },
            "notification:allow-is-permission-granted",
            "notification:allow-request-permission",
            "notification:allow-show",
            "notification:default",
            "updater:allow-check",
            "updater:allow-install"
          ]
        },
        {
          "identifier": "modal-capability",
          "description": "File organization modal window capabilities",
          "windows": ["file-organization"],
          "permissions": [
            "core:default",
            "dialog:allow-open",
            "dialog:default",
            "fs:allow-read",
            "fs:allow-write",
            "fs:read-files",
            {
              "identifier": "fs:scope",
              "allow": ["**"]
            }
          ]
        },
        {
          "identifier": "update-capability",
          "description": "Update window capabilities",
          "windows": ["update"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "updater:allow-check",
            "updater:allow-install"
          ]
        },
        {
          "identifier": "about-capability",
          "description": "About window capabilities",
          "windows": ["about"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit"
          ]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.icns"
    ],
    "macOS": {
      "dmg": {
        "background": "icons/dmg-background.png",
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "windowPosition": {
          "x": 400,
          "y": 100
        },
        "appPosition": {
          "x": 180,
          "y": 220
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 220
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQwM0ZDQ0ZGQ0VGNTEyNjUKUldSbEV2WE8vOHcvMEluZVdOV2t3Q3U3Sy8ybG1aS3VRMVZnRTVydm52K0lmTUdvcVFaZVVmRTkK",
      "endpoints": [
        "https://github.com/ryanonmars/fileflow/releases/download/latest/latest.json"
      ]
    }
  }
}

